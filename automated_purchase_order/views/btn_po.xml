<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="btn_create_po_form_view" model="ir.ui.view">
        <field name="name">btn.create.po.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_label_layout']" position="before">
                <button string="Create PO" type="object" name="action_create_po" class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>