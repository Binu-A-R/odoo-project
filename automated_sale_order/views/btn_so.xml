<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="btn_create_so_form_view" model="ir.ui.view">
        <field name="name">btn.create.so.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_label_layout']" position="before">
                <button string="Create SO" type="object" name="action_create_so" class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>