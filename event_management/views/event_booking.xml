<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="event_booking_action" model="ir.actions.act_window">
        <field name="name">Event Booking</field>
        <field name="res_model">event.booking</field>
        <field name="view_mode">tree,form</field>
    </record>
     <record id="event_type_form_view" model="ir.ui.view">
    <field name="model">event.booking</field>
    <field name="arch" type="xml">
        <form string="event.booking ">
            <sheet>
                <group>
                    <group>
                        <field name="event_name"/>
                        <field name="name" widget="res_partner_many2one"
                                       context="{'show_address': 1}"
                                       options='{"always_reload": True}'/>
                        <field name="start_date"/>
                        <field name="end_date"/>

                    </group>
                    <group>

                            <field name="event_type" widget="event.property_many2one"/>

                            <field name="booking_date"/>
                    </group>

                    </group>
           </sheet>
            <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
            </div>
      </form>
       </field>
    </record>

    <record id="event_booking_tree_view" model="ir.ui.view">
        <field name="model">event.booking</field>
        <field name="arch" type="xml">
            <tree string="event.booking">
                <field name="event_name"/>
                <field name="name"/>
                <field name="booking_date"/>
                <field name="start_date"/>
                <field name="end_date"/>


            </tree>
        </field>
    </record>
    <menuitem id="event_booking_menu_action" sequence="3" name ="Event Booking" parent="event_menu_root" action="event_booking_action" />

</odoo>