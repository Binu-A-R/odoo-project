<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="event_booking_action" model="ir.actions.act_window">
        <field name="name">Event Booking</field>
        <field name="res_model">event.booking</field>
        <field name="view_mode">tree,form</field>
    </record>
     <record id="event_booking_form_view" model="ir.ui.view">
            <field name="model">event.booking</field>
            <field name="arch" type="xml">
                <form string="event.booking ">
                   <header>
                       <button name="action_catering_service" states="draft" string="Catering Service" class="btn-primary" type="object"/>
                       <button name="action_confirm" string="Confirm" class="btn-primary" type="object" states="catering_done"  />
                       <button name="action_invoice" string=" create Invoice" class="btn-primary" type="object" />
                       <field name="state" widget="statusbar" statusbar_visible="draft,confirm" string="Status"/>
                   </header>
                   <sheet>
                       <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoice" type="object" class="oe_stat_button" icon="fa-pencil-square-o" modifiers="{&quot;invisible&quot;: [[&quot;invoice_count&quot;, &quot;=&quot;, 0]]}">
<!--                        <field name="invoice_count" widget="statinfo" string="Invoices" modifiers="{&quot;readonly&quot;: true}"/>-->
                    </button>
                       </div>
                        <widget name="web_ribbon" title="Paid" attrs="{'invisible': [('state', '!=', 'invoice')]}"/>
                        <div class="oe_title">
                                <h1><field name="event_name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="event_type_id" options="{'no_create': True}"/>
                                <field name="partner_id"  string="Customer" widget="res_partner_many2one"
                                           context="{'show_address': 1}"
                                           options='{"always_reload": True}'/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="duration"/>
                            </group>
                            <group>
                                <field name="booking_date"/>
                            </group>
                        </group>
                   </sheet>
                    <div class="oe_chatter">
                                <field name="message_follower_ids"/>
                                <field name="activity_ids"/>
                                <field name="message_ids"/>
                    </div>
              </form>
            </field>
     </record>

    <record id="event_booking_tree_view" model="ir.ui.view">
        <field name="model">event.booking</field>
        <field name="arch" type="xml">
            <tree string="event.booking">
                <field name="event_name" string="Name" />
                <field name="booking_date"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>
    <menuitem id="event_booking_menu_action" sequence="3" name ="Event Booking" parent="event_menu_root" action="event_booking_action" />

</odoo>